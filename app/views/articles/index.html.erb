<% @articles.each do |article| %>

  <h1><%= link_to "#{article.title}", article %></h1>
  <div><%= article.body %>- <%= link_to "Editar", edit_article_path(article) %>- <%= link_to "Eliminar", article, method: :delete, class: "red" %></div>
  <% unless article.user.nil? %>
  	<i style="font-size: 13px;">Escrito por:<%= article.user.email %></i	>	
  <% end %>

<% end %>
